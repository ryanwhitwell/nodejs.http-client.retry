{
    "testURL": "http://localhost/",
    "coverageDirectory": "./coverage",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coveragePathIgnorePatterns": [
      "./src/index.d.ts",
      "./src/index.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json", 
      "node"
    ],
    "preset": "ts-jest"
  }
